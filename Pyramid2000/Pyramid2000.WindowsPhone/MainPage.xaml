<Page
    x:Class="Pyramid2000.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pyramid2000"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBox x:Name="Command" HorizontalAlignment="Left" Margin="31,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202"/>
        <Button x:Name="Confirm" Content="Confirm" HorizontalAlignment="Left" Margin="254,21,0,0" VerticalAlignment="Top" Click="Confirm_Click"/>
        <ScrollViewer x:Name="BodyScroller" Margin="31,88,37,42" VerticalScrollBarVisibility="Auto" BorderBrush="AntiqueWhite" BorderThickness="3" Height="Auto">
            <TextBlock x:Name="Body" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>
        </ScrollViewer>
    </Grid>
</Page>